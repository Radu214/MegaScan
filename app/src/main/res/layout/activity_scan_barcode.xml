<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Camera preview area -->
    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Overlay to guide user for barcode alignment -->
    <View
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/barcode_overlay" />

    <!-- Bottom navigation container -->
    <!-- Bottom navigation container -->
    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:gravity="center">

        <!-- Profile icon -->
        <ImageView
            android:id="@+id/icon_profile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/baseline_account_circle_24"
            android:contentDescription="@string/profile_desc"
            android:padding="8dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter" />

        <!-- Cart icon -->
        <ImageView
            android:id="@+id/icon_cart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/baseline_shopping_cart_24"
            android:contentDescription="@string/cart_desc"
            android:padding="8dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter" />

        <!-- Scan icon -->
        <ImageView
            android:id="@+id/icon_scan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/baseline_add_shopping_cart_24"
            android:contentDescription="@string/scan_desc"
            android:padding="8dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter" />

        <!-- Promo icon -->
        <ImageView
            android:id="@+id/icon_promo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/baseline_apps_24"
            android:contentDescription="@string/promo_desc"
            android:padding="8dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter" />

        <!-- AI icon -->
        <ImageView
            android:id="@+id/icon_ai"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/baseline_assistant_24"
            android:contentDescription="@string/assistant_desc"
            android:padding="8dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter" />

    </LinearLayout>


</FrameLayout>
